<UserControl x:Class="EspressoProject.UserControls.OptionsUserControls.RegistrationUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EspressoProject.UserControls.OptionsUserControls"
             mc:Ignorable="d" 
            d:DesignHeight="722" d:DesignWidth="1116">
    <Grid Background="WhiteSmoke">
        <StackPanel >
            <TextBox x:Name="UsernameTextBox" Text="Korisničko ime" FontSize="26"  Width="250" HorizontalAlignment="Left" Margin="40,50,0,0" Foreground="#616161" />
            <TextBox x:Name="PasswordTextBox" Text="Lozinka" FontSize="26"  Width="250" HorizontalAlignment="Left" Margin="40,35,0,0" Foreground="#616161" />
            <ComboBox x:Name="PrivilegeComboBox" Text="Tip naloga" FontSize="26" Width="250" HorizontalAlignment="Left" Margin="40,35,0,0" Foreground="#616161">
                <ComboBoxItem Content="Administrator"/>
                <ComboBoxItem Content="Konobar"/>
            </ComboBox>
            <Button Content="Dodaj nalog" FontSize="30" Height="80" Width="250" HorizontalAlignment="Left" Margin="40,80,10,20"  />
            

        </StackPanel>
    </Grid>
    
    
</UserControl>
