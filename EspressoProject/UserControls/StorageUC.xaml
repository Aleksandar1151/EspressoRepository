            </ListBox>
            <Button x:Name="btnBills" Content="RACUNI" Grid.Column="1" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="650" Height="30"/>
            <ListBox x:Name="lbBills" Grid.Column="1" HorizontalAlignment="Left" Height="514" Margin="8,38,0,0" VerticalAlignment="Top" Width="650"/>
            <Button x:Name="btnRefreshItems" Content="UCITAJ PONOVO ROBU" HorizontalAlignment="Left" Margin="0,560,0,0" VerticalAlignment="Top" Width="325" Height="30" Click="btnRefreshItems_click"/>
            <Button x:Name="btnRefreshSoldItems" Content="UCITAJ PONOVO PRODANU ROBU" HorizontalAlignment="Left" Margin="325,560,0,0" VerticalAlignment="Top" Width="325" Height="30" Click="btnRefreshSoldItems_click"/>
            <Button x:Name="btnRefreshBills" Content="UCITAJ PONOVO RACUNE" Grid.Column="1" HorizontalAlignment="Left" Margin="0,560,0,0" VerticalAlignment="Top" Width="325" Height="30"/>
            <Button x:Name="btnCloseBills" Content="OBRISI RACUNE" Grid.Column="1" HorizontalAlignment="Left" Margin="325,560,0,0" VerticalAlignment="Top" Width="325" Height="30"/>
            <Button x:Name="btnDeleteItems" Content="OBRISI ROBU" HorizontalAlignment="Left" Margin="0,590,0,0" VerticalAlignment="Top" Width="325" Height="30" Click="btnDeleteItems_click"/>
            <Button x:Name="btnDeleteSoldItems" Content="OBRISI PRODANU ROBU" HorizontalAlignment="Left" Margin="325,590,0,0" VerticalAlignment="Top" Width="325" Height="30" Click="btnDeleteSoldItems_click"/>
            <ListBox x:Name="lbSoldItems" HorizontalAlignment="Left" Height="514" Margin="325,38,0,0" VerticalAlignment="Top" Width="325"/>
        </Grid>

    </Grid>
</UserControl>
