             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EspressoProject.UserControls"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
             mc:Ignorable="d" 
             d:DesignHeight="722" d:DesignWidth="1366">
    <Grid Background="White">
        <TextBlock HorizontalAlignment="Left" Margin="621,39,0,0" TextWrapping="Wrap" Text="SKLADIŠTE" VerticalAlignment="Top" Height="45" Width="174" FontSize="30" />
        <Grid Background="White" VerticalAlignment="Bottom" Height="630" Width="1300" Margin="66,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition>
                </ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnItems" Content="ROBA" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="325" Height="30" Click="btnItems_Click"/>
            <Button x:Name="btnSoldItems" Content="PRODANA ROBA" HorizontalAlignment="Left" Margin="325,0,0,0" VerticalAlignment="Top" Width="325" Height="30" Click="btnSoldItems_click"/>
