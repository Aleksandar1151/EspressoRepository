<Window x:Class="EspressoProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:EspressoProject"
        mc:Ignorable="d"  Height="768px" Width="1366px" WindowStartupLocation="CenterScreen" WindowState="Maximized" ResizeMode="NoResize" WindowStyle="None">

    <StackPanel>
        <Grid Background="WhiteSmoke" Height="46" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5 0">
                <Button x:Name="StorageButton" Visibility="Hidden" Content="Skladište" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFA2A2A2" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Click="StorageButtonClick" Margin="0,0,1180,0"/>
                
                <materialDesign:PopupBox Name="PopupBoxName" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" Margin="10" Foreground="#FFA2A2A2">
                    <StackPanel Width="150">
                        <Button Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Center" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Click="OptionsButtonClick">
                            <materialDesign:PackIcon Kind="Settings" Foreground="#FFA2A2A2" Width="25" Height="25" />
                        </Button>
                        <Separator/>
                        <Button Click="LogOutButtonClick" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Center" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}">
                            <materialDesign:PackIcon Kind="Logout" Foreground="#FFA2A2A2" Width="25" Height="25" />
                        </Button>
                        <Separator/>
                        <Button Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Center" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Click="ShutDownButton">
                            <materialDesign:PackIcon Kind="Power" Foreground="#FFA2A2A2" Width="25" Height="25" />
                        </Button>

                    </StackPanel>
                </materialDesign:PopupBox>
            </StackPanel>


        </Grid>
        <Grid x:Name="GridMain" Height="722" Background="WhiteSmoke">
            <Button Content="PRIJAVA" Height="Auto" Margin="156,425,710,254" Click="LoginButtonClick" FontSize="25" />
            <TextBox Name="NameBox" HorizontalAlignment="Left" Height="72" Margin="160,176,0,0" TextWrapping="Wrap" Text="Korisničko ime" VerticalAlignment="Top" Width="450" FontSize="30" GotFocus="NameBoxGotFocus" LostFocus="NameBoxLostFocus" Foreground="#616161"/>
            <TextBox Name="PasswordBox" HorizontalAlignment="Left" Height="72" Margin="159,276,0,0" TextWrapping="Wrap" Text="Lozinka" VerticalAlignment="Top" Width="453" FontSize="30" Foreground="#616161" GotFocus="PasswordBoxGotFocus" LostFocus="PasswordBoxLostFocus"/>
            <Button Content="Ugao" Margin="1290,673,2,1" Height="Auto"/>            
            <ProgressBar Name="pbStatus" HorizontalAlignment="Left" Height="474" Margin="761,87,0,0" VerticalAlignment="Top" Width="500" RenderTransformOrigin="0.524,0.504" Orientation="Vertical" Foreground="#FF964315" Background="WhiteSmoke" BorderBrush="White" />
            <Image Name="CoffeeImage" HorizontalAlignment="Left" Height="587" Margin="712,59,0,0" VerticalAlignment="Top" Width="586" RenderTransformOrigin="-0.031,0.56" Source="Resources/cofefe.png"/>
            

        </Grid>

    </StackPanel>

</Window>
